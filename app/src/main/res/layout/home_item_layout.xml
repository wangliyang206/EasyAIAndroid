<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <!-- 图片 -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civi_homeitemlayout_pic"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:civ_border_color="@android:color/white"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 姓名 -->
    <TextView
        android:id="@+id/txvi_homeitemlayout_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/common_text_color"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/civi_homeitemlayout_pic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/civi_homeitemlayout_pic" />

    <!-- 介绍 -->
    <TextView
        android:id="@+id/txvi_homeitemlayout_intr"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:text=""
        android:textColor="@color/common_text_tips_color"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/civi_homeitemlayout_pic"
        app:layout_constraintLeft_toRightOf="@+id/civi_homeitemlayout_pic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txvi_homeitemlayout_name" />

</androidx.constraintlayout.widget.ConstraintLayout>